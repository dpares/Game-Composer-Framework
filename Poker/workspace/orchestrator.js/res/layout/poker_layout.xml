<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/pokertable">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dealerLabel"
        android:layout_gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALL"
        android:id="@+id/callButton"
        android:layout_gravity="center_horizontal|bottom"
        android:enabled="false"
        android:background="#ffff0f5a"
        android:onClick="call" />

    <TextView
        android:layout_width="75px"
        android:layout_height="150px"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A♥"
        android:id="@+id/commonCard1"
        android:layout_gravity="left|center_vertical"
        android:background="#ffffffff"
        android:textAlignment="center"
        android:layout_marginLeft="200px"
        android:layout_marginBottom="50px"
        android:enabled="false"
        android:visibility="gone" />

    <TextView
        android:layout_width="75px"
        android:layout_height="150px"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A♥"
        android:id="@+id/commonCard2"
        android:layout_gravity="left|center_vertical"
        android:background="#ffffffff"
        android:textAlignment="center"
        android:layout_marginLeft="375px"
        android:layout_marginBottom="50px"
        android:visibility="gone" />

    <TextView
        android:layout_width="75px"
        android:layout_height="150px"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A♥"
        android:id="@+id/commonCard3"
        android:layout_gravity="left|center_vertical"
        android:background="#ffffffff"
        android:textAlignment="center"
        android:layout_marginLeft="550px"
        android:layout_marginBottom="50px"
        android:visibility="gone" />

    <TextView
        android:layout_width="75px"
        android:layout_height="150px"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A♥"
        android:id="@+id/commonCard4"
        android:layout_gravity="left|center_vertical"
        android:background="#ffffffff"
        android:textAlignment="center"
        android:layout_marginLeft="730px"
        android:layout_marginBottom="50px"
        android:visibility="gone" />

    <TextView
        android:layout_width="75px"
        android:layout_height="150px"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A♥"
        android:id="@+id/commonCard5"
        android:layout_gravity="left|center_vertical"
        android:background="#ffffffff"
        android:textAlignment="center"
        android:layout_marginLeft="900px"
        android:layout_marginBottom="50px"
        android:visibility="gone" />
</FrameLayout>